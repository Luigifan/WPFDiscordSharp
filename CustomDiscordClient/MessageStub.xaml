<UserControl x:Class="CustomDiscordClient.MessageStub"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomDiscordClient"
             mc:Ignorable="d" MinHeight="71">
    <Grid>
        <Image x:Name="userAvatar" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" MaxWidth="40" MaxHeight="40"/>
        <Label x:Name="usernameLabel" Content="Label" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="SemiBold"/>
        <TextBlock x:Name="message" TextWrapping="WrapWithOverflow" Text="This is a test of a really extremely long message " HorizontalAlignment="Left" Margin="58,35,0,0" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True"/>

    </Grid>
</UserControl>
